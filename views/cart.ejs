<%- include('./partials/header') %>

    <%for(let item of cart){ %>
        <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
            <div class="w-[30%] rounded-md overflow-y overflow-hidden">
                <div class="w-full h-[270px] flex justify-center bg-[<%= item.product.bgcolor %>] align-center  ">
                    <img class="h-[12rem] mt-5" src="data:image/jpeg;base64, <%= item.product.image.toString('base64') %>"
                        alt="">
                </div>
                <div class="w-full flex justify-between bg-[<%= item.product.panelcolor %>]  px-5 py-4">
                    <h3 class="text-2xl">
                        <%= item.product.name %>
                    </h3>
                    <div class="flex items-center gap-2">
                        <a href="/cart/add/<%=item.product._id%>"><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i></a>
                        <div class="px-2 py-1 rounded-md  bg-[<%= item.product.panelcolor %>] text-black"><%= item.quantity%></div>
                        <a href="/cart/remove/<%=item.product._id%>"><i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i></a>                        
                    </div>
                </div>
                <hr>
                <div
                    class="flex items-center bg-[<%= item.product.panelcolor %>] text-[<%= item.product.textcolor %>]  justify-between px-5 py-3">
                    <h4 class="text-lg">Item Price</h4>
                    <h2 class="text-lg">₹ <%= item.product.price %>
                    </h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= item.product.price * item.quantity %>
                        </h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>
                            <%= item.product.discount %> % Off
                        </h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20 (extra)</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= item.product.price * item.quantity + 20 - item.product.price * item.quantity*item.product.discount/100 %> only</h3>
                </div>
                <form action=""></form>
            </div>
        </div>

    <%}%>
    

    

<%- include('./partials/footer') %>