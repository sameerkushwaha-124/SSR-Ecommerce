<%- include('./partials/user-header') %>
<%- include('./partials/flash-messages') %>
            <div class="w-full h-screen flex px-20">
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h3 class="text-4xl" style="color: var(--text-primary);">welcome to
                            <span class="font-semibold" style="color: var(--accent-primary);">Velora</span>
                        </h3>
                        <h4 class="text-2xl mb-5" style="color: var(--text-secondary);">create your account</h4>
                        <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                            <input
                                class="block w-full px-4 py-3 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2"
                                style="background-color: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);"
                                onfocus="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 0 2px var(--accent-primary)33';"
                                onblur="this.style.borderColor='var(--border-primary)'; this.style.boxShadow='none';"
                                type="text" placeholder="Full Name" name="fullname">
                            <input
                                class="block w-full px-4 py-3 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2"
                                style="background-color: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);"
                                onfocus="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 0 2px var(--accent-primary)33';"
                                onblur="this.style.borderColor='var(--border-primary)'; this.style.boxShadow='none';"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="block w-full px-4 py-3 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2"
                                style="background-color: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);"
                                onfocus="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 0 2px var(--accent-primary)33';"
                                onblur="this.style.borderColor='var(--border-primary)'; this.style.boxShadow='none';"
                                type="password" placeholder="Password" name="password">
                            <button class="w-full px-6 py-3 mt-4 rounded-full font-medium transition-all duration-200 transform hover:scale-105"
                                    style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); color: white; border: none;"
                                    onmouseover="this.style.background='linear-gradient(135deg, var(--accent-hover), var(--accent-primary))';"
                                    onmouseout="this.style.background='linear-gradient(135deg, var(--accent-primary), var(--accent-secondary))';"
                                    type="submit">Create My Account</button>
                        </form>
                    </div>
                </div>
                <div class="w-1/2 flex items-center justify-center h-screen">
                    <div class="w-full px-32">
                        <h4 class="text-2xl capitalize mb-5" style="color: var(--text-secondary);">login your account</h4>
                        <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                            <input
                                class="block w-full px-4 py-3 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2"
                                style="background-color: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);"
                                onfocus="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 0 2px var(--accent-primary)33';"
                                onblur="this.style.borderColor='var(--border-primary)'; this.style.boxShadow='none';"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="block w-full px-4 py-3 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2"
                                style="background-color: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);"
                                onfocus="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 0 2px var(--accent-primary)33';"
                                onblur="this.style.borderColor='var(--border-primary)'; this.style.boxShadow='none';"
                                type="password" placeholder="Password" name="password">
                            <button class="w-full px-6 py-3 mt-4 rounded-full font-medium transition-all duration-200 transform hover:scale-105"
                                    style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); color: white; border: none;"
                                    onmouseover="this.style.background='linear-gradient(135deg, var(--accent-hover), var(--accent-primary))';"
                                    onmouseout="this.style.background='linear-gradient(135deg, var(--accent-primary), var(--accent-secondary))';"
                                    type="submit">Login</button>
                        </form>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>